<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightGrey"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="true" android:drawable="@drawable/gradient_grid_button" />
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/gradient_grid_button" />

    <item android:drawable="@drawable/container_grid" />

</selector>