<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".Fragments.AddTagFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container"
        android:layout_gravity="center"
        android:weightSum="2"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/closeBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:src="@drawable/cancelbtn" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Balance"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_marginRight="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exchange"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginHorizontal="7dp"
                android:textColor="@color/colorPrimary"
                />
            <EditText
                android:id="@+id/exchangeName"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:backgroundTintMode="screen"
                android:dropDownHeight="match_parent"
                android:fontFamily="@font/poppinsbold"
                android:hint="Name"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginHorizontal="7dp"
                android:textColor="@color/colorPrimary"
                />
            <EditText
                android:id="@+id/amountExchange"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:backgroundTintMode="screen"
                android:dropDownHeight="match_parent"
                android:fontFamily="@font/poppinsbold"
                android:hint="499,900"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNT"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginHorizontal="7dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginHorizontal="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Date Exchange"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/dateExchange"
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:backgroundTintMode="screen"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/spentCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPENT"
                android:textSize="21dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/remove_exchange"/>

            <CheckBox
                android:id="@+id/earnedCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EARNED"
                android:textSize="21dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/add_exchange"/>

        </LinearLayout>
        <ImageButton
            android:id="@+id/addBalanceBtn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/addbtn" />
    </LinearLayout>
</ScrollView>