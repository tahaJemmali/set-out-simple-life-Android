<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <androidx.cardview.widget.CardView
        android:layout_weight="34"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:background="@drawable/container_grid">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="EXPERIENCE"
                android:textColor="@color/redBord"/>

            <TextView
                android:id="@+id/expValue"
                android:layout_below="@+id/textExp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1,000"
                android:textStyle="bold"
                android:textSize="20sp"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:layout_weight="33">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TASKS DONE"
                android:textColor="@color/dark_blue"/>

            <TextView
                android:layout_below="@+id/textTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textStyle="bold"
                android:textSize="20sp"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:layout_weight="33">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="BALANCE"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/balanceValue"
                android:layout_below="@+id/textBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:text="200"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DNT"
                />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>